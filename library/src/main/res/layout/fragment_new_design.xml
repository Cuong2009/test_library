<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_login"
        android:layout_height="360dp">

        <ImageView
            android:layout_width="341dp"
            android:layout_height="180dp"
            android:background="@drawable/bg_login_curve"/>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="150dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_splash_app" />

        <EditText
            android:id="@+id/user_edit_text1"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/customer_edit_text"
            android:hint="user"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="text"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/pass_edit_text1"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/customer_edit_text"
            android:hint="password"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:inputType="number"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/login_button1"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/customer_login"
            android:text="Login"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</RelativeLayout>